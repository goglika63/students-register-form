@page
@model GoglikaRazor.Pages.Students.IndexModel



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Students List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-success">
                <i class="bi bi-person-plus-fill"></i> &nbsp;Add New Student
            </a>
        </div>
    </div>

    <br /> <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Students)
            {
                <tr>
                    <td>@obj.FirstName</td>
                    <td>@obj.LastName</td>
                    <td>@obj.Age</td>
                    <td>@obj.Address</td>
                    <td>@obj.PhoneNumber</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                            <i class="bi bi-pencil-square"></i>Update
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-person-dash-fill"></i>Delete
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

