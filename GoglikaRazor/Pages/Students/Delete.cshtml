@page
@model GoglikaRazor.Pages.Students.DeleteModel


<form method="post">
    <input hidden asp-for="Student.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Student</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Student.FirstName"></label>
            <input asp-for="Student.FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Student.LastName"></label>
            <input asp-for="Student.LastName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Student.Age"></label>
            <input asp-for="Student.Age" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Student.Address"></label>
            <input asp-for="Student.Address" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Student.PhoneNumber"></label>
            <input asp-for="Student.PhoneNumber" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
